    <EmbeddedResource Include="Xml\easysqldemo.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Xml\easysqldemo.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
